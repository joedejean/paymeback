<div class="page-header">
  <h1>Add a New Expense</h1>
</div>

<div class="row">
  <div class="col-md-5">

    <%= form_tag "/expenses", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "title", "What would you like to name the expense?" %>
        <%= text_field_tag "title", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "totalamount", "Total $ Amount" %>
        <%= text_field_tag "totalamount", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "date", "Date" %>
        <%= text_field_tag "date", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "notes", "Notes" %>
        <%= text_field_tag "notes", "", "class" => "form-control" %>
      </div>


      <%= submit_tag "Add This Expense", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/expenses" %>

    </form>
</div>
</div>
